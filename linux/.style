# Style
BOLD=$(tput bold)
UNDERLINE=$(tput sgr 0 1)
RESET=$(tput sgr0)

# Colors
BLACK=$(tput setaf 0)
PURPLE=$(tput setaf 171)
RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
YELLOW=$(tput setaf 3)
BLUE=$(tput setaf 4)
MAGENTA=$(tput setaf 5)
CYAN=$(tput setaf 6)
WHITE=$(tput setaf 7)
GRAY=$(tput setaf 8)
HIRED=$(tput setaf 9)
HIGREEN=$(tput setaf 10)
HIYELLOW=$(tput setaf 11)
HIBLUE=$(tput setaf 12)
HIMAGENTA=$(tput setaf 13)
HICYAN=$(tput setaf 14)
HIWHITE=$(tput setaf 15)
